{
  "name": "rakutter",
  "private": true,
  "version": "0.1.0",
  "type": "commonjs",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint:fix": "next lint --ext ts,tsx --fix --max-warnings 0 src",
    "lint:check": "next lint --ext ts,tsx --max-warnings 0 'src'",
    "format:fix": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,json}'",
    "format:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,css,json}'",
    "tsc": "tsc",
    "tsc-check": "tsc --noEmit --incremental false",
    "lint-staged": "lint-staged",
    "prepare": "simple-git-hooks > /dev/null"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "18.17.19",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^8.8.0",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "simple-git-hooks": "^2.8.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2"
  },
  "simple-git-hooks": {
    "pre-commit": "bash -c 'if [[ \"$(git diff --diff-filter=d --staged --name-only)\" =~ ^app/* ]]; then cd app/ && npm run lint-staged; fi'"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --report-unused-disable-directives --max-warnings 0",
      "prettier --loglevel=error"
    ],
    "*.{ts,tsx}": [
      "tsc-check"
    ]
  }
}
